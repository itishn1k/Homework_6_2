<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/image_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/image_h_and_w"
        android:layout_height="@dimen/image_h_and_w"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/image_corner_radius">

        <ImageView
            android:id="@+id/iv_gallery_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/image_preview_in_gallery"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            tools:ignore="ImageContrastCheck" />
    </androidx.cardview.widget.CardView>


</FrameLayout>
